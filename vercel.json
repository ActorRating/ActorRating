{
  "buildCommand": "prisma generate && npm run build",
  "installCommand": "npm install",
  "framework": "nextjs",
  "functions": {
    "src/app/api/**/*.ts": {
      "maxDuration": 30
    }
  },
  "env": {
    "DATABASE_URL": "$DATABASE_URL"
  },
  "build": {
    "env": {
      "SKIP_ENV_VALIDATION": "1",
      "PRISMA_SKIP_POSTINSTALL_GENERATE": "true",
      "NODE_ENV": "production"
    }
  }
}
